{
  "name": "npm-script",
  "version": "1.0.0",
  "description": "a npm script work",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o dist/css src/css",
    "lint": "eslint src/js",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "build:js": "npm run lint && npm run uglify",
    "build:all": "npm run scss && npm run build:js "
  },
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "browser-sync": "^2.26.3",
    "eslint": "^5.15.0",
    "node-sass": "^4.11.0",
    "postcss-cli": "^6.1.2",
    "uglify-js": "^3.4.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CLiangs/npmScript.git"
  },
  "keywords": [
    "npm",
    "script"
  ],
  "author": "Chenliang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CLiangs/npmScript/issues"
  },
  "homepage": "https://github.com/CLiangs/npmScript#readme"
}
